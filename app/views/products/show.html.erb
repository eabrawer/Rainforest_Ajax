<h2><%= @product.name %></h2>
<p><%= @product.description %></p>
<p><%= @product.formatted_price %></p>

<%= link_to "Back", products_url %>
<%= link_to "Edit Product", edit_product_path %>
<%= link_to "Delete Product", @product, :confirm => "Are you sure you want to delete this picture?", :method => :delete %>

<% if current_user %>

  <h3>Reviews</h3>

  <p>Reviews for <%= @product.name %></p>

  <% @product.reviews.each do |review| %>
    <p>
      <%= review.comment %>
      <br>
      <% if review.user != nil %>
        <em> by <%= review.user.email %></em>
        Added on: <%= review.created_at %>
      <% end %>
    </p>
  <% end %>

<% end %>