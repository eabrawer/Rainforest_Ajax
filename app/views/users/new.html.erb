<h1>Sign Up</h1>

<%= form_for @user do |f| %>

    <%= f.label :email %><br/>
    <%= f.text_field :email %>

    <%= f.label :password %><br/>
    <%= f.password_field :password %>

    <%= f.label :password_confirmation %><br/>
    <%= f.password_field :password_confirmation %>

    <%= f.submit %></div>
    
<% end %>

  <% if @user.errors.any? %>
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
  <% end %>


